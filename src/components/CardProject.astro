---
const { id, title, image, description, code, page } = Astro.props
---

<div
  id={id}
  class='relative flex flex-col h-full drop-shadow-lg drop-shadow-[#415a77] group'
>
  <div
    class='bg-[#415a77] font-semibold border-[#778da9] border-solid border-1 rounded-lg h-full backdrop-blur-sm p-2 flex flex-col gap-2 items-center -rotate-x-15 -rotate-y-30 group-hover:rotate-x-0 ease-in-out duration-500 perspective-1000'
  >
    <header class=''>
      <h3 class='text-xl text-shadow-md text-shadow-sky-200'>{title}</h3>
    </header>
    <img src={image} alt=`Screenshot of ${title}` />
    <p class='text-[rgb(200,200,200)]'>
      {description}
    </p>
  </div>
  <footer
    class='w-full flex items-center gap-2 justify-around px-8 py-2 group-hover:opacity-100 xl:opacity-0 transition-opacity duration-500 xl:rotate-x-0 -rotate-x-15 -rotate-y-30 hover:rotate-x-0 ease-in-out'
  >
    <a
      href={code}
      class='flex justify-center bg-[#415a77] rounded-full border-solid border-1 border-[#778da9] w-16 p-1 hover:bg-[#778da9] transition-colors'
    >
      <button class='cursor-pointer'>
        <svg
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='white'
          class='size-8'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5'
          ></path>
        </svg>
      </button>
    </a>
    <a
      href={page}
      class='flex justify-center bg-[#415a77] rounded-full border-solid border-1 border-[#778da9] w-16 p-1 hover:bg-[#778da9] transition-colors'
    >
      <button class='cursor-pointer'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='white'
          class='size-8'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25'
          ></path>
        </svg>
      </button>
    </a>
  </footer>
</div>
